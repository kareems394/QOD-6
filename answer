#include <iostream>
using namespace std;

int check(string test){
    int count =0;
    int max = 0;
    for(int i=0; i< test.length(); i++){
        if(i%2==0 && test[i] == '('){
            count++;
        }
        else if(count!=0 && i%2 ==1 && test[i] ==')'){
            count++;
        }
        else{
            count=0;
        }
        if(count >max){
            max = count;
        }
    }
    if(max%2!=0)
    return max-1;
    else
    return max;
}
int main()
{
    string s = "())(()()";
    cout << check(s);

    return 0;
}
